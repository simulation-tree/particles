<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Title>Particles</Title>
    <Authors>popcron</Authors>
    <Company>simulation-tree</Company>
    <RepositoryUrl>https://github.com/simulation-tree/particles</RepositoryUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\shapes\source\Shapes.csproj"/>
    <ProjectReference Include="..\..\unmanaged\core\Unmanaged.Core.csproj"/>
    <ProjectReference Include="..\..\worlds\core\Worlds.Core.csproj"/>
    <ProjectReference Include="..\..\types\generator\Types.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\..\worlds\generator\Worlds.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin/Debug/net9.0/Particles.dll" Pack="true" PackagePath="tools/debug/Particles.dll" Visible="false"/>
    <Content Include="bin/Debug/net9.0/Particles.xml" Pack="true" PackagePath="tools/debug/Particles.xml" Visible="false" Condition="Exists('bin/Debug/net9.0/Particles.xml')"/>
    <Content Include="bin/Release/net9.0/Particles.dll" Pack="true" PackagePath="tools/release/Particles.dll" Visible="false"/>
    <Content Include="bin/Release/net9.0/Particles.xml" Pack="true" PackagePath="tools/release/Particles.xml" Visible="false" Condition="Exists('bin/Release/net9.0/Particles.xml')"/>
    <Content Include="build/Particles.targets" Pack="true" PackagePath="build/Particles.targets" Visible="false"/>
  </ItemGroup>

</Project>